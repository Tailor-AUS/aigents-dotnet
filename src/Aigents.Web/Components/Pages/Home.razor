@page "/"
@page "/buy"
@page "/sell"
@page "/rent"
@page "/agent"
@rendermode @(new InteractiveServerRenderMode(prerender: true))
@using Microsoft.AspNetCore.Components.Web
@inject NavigationManager Navigation

<PageTitle>Aigents - Australia's Open Listing Marketplace</PageTitle>

@* Show Hero - Subdomain Routing handled by Hero component *@
<Hero OnGetStarted="HandleGetStarted" />

@code {
    private void HandleGetStarted(string mode)
    {
        Navigation.NavigateTo($"/chat?mode={mode}", forceLoad: false);
    }
}

@page "/explore"
@rendermode @(new InteractiveServerRenderMode(prerender: true))
@using Aigents.Web.Components.Shared
@using Aigents.Web.Services
@using Microsoft.AspNetCore.Components.Web
@using System.Net.Http.Json
@implements IDisposable

@inject IHttpClientFactory HttpClientFactory
@inject ISiteContext SiteContext
@inject NavigationManager Nav
@inject IJSRuntime JS

<PageTitle>Explore @Location - Aigents</PageTitle>

<div class="explore-container @_personaClass">
    @* Animated Background Mesh *@
    <div class="mesh-gradient"></div>
    
    @* Glow Orbs *@
    <div class="glow-orb glow-1"></div>
    <div class="glow-orb glow-2"></div>

    <header class="explore-header glass-header">
        <div class="logo-group">
            <a href="/" class="logo-link">
                <span class="logo-icon">‚ú¶</span>
                <span class="logo-text">aigents<span class="logo-tld">.au</span></span>
            </a>
        </div>
        
        <div class="search-bar glass-search">
            <div class="mode-badge">@_modeDisplay</div>
            <div class="search-input-wrapper">
                <span class="search-icon">üìç</span>
                <input type="text" 
                       @bind="_searchQuery" 
                       @bind:event="oninput"
                       @onkeypress="HandleSearchKeyPress"
                       placeholder="Search suburb or address..." />
            </div>
            <button class="search-btn" @onclick="ExecuteSearch">
                <span>üîç</span>
            </button>
        </div>

        <div class="header-actions">
            <button class="filter-toggle @(_showFilters ? "active" : "")" @onclick="ToggleFilters">
                <span>‚öôÔ∏è</span> Filters
            </button>
            <button class="action-btn primary" @onclick="StartChat">
                @(Mode?.ToLower().Contains("sell") == true ? "Get Valuation" : "Chat with Agent")
            </button>
            <div class="user-avatar">
                @(User?.Identity?.Name?[0] ?? 'G')
            </div>
        </div>
    </header>

    <div class="explore-content">
        @* Left Panel - Property Intelligence *@
        <div class="intelligence-panel glass-panel">
            <div class="panel-header">
                <h2>üìç @Location</h2>
                <span class="badge">QLD Cadastre</span>
            </div>
            
            @* Data View Tabs *@
            <div class="view-tabs">
                <button class="view-tab @(_viewMode == "sold" ? "active" : "")" @onclick='() => _viewMode = "sold"'>
                    üè∑Ô∏è Recently Sold
                </button>
                <button class="view-tab @(_viewMode == "market" ? "active" : "")" @onclick='() => _viewMode = "market"'>
                    üè† On Market
                </button>
                <button class="view-tab @(_viewMode == "lots" ? "active" : "")" @onclick='() => _viewMode = "lots"'>
                    üìê All Lots
                </button>
            </div>
            
            @* Time Filter for Sold Properties *@
            @if (_viewMode == "sold")
            {
                <div class="filter-section">
                    <label>Sale Period</label>
                    <div class="time-pills">
                        <button class="time-pill @(_soldPeriod == "0-6" ? "active" : "")" @onclick='() => _soldPeriod = "0-6"'>0-6 months</button>
                        <button class="time-pill @(_soldPeriod == "6-12" ? "active" : "")" @onclick='() => _soldPeriod = "6-12"'>6-12 months</button>
                        <button class="time-pill @(_soldPeriod == "1-3" ? "active" : "")" @onclick='() => _soldPeriod = "1-3"'>1-3 years</button>
                        <button class="time-pill @(_soldPeriod == "3+" ? "active" : "")" @onclick='() => _soldPeriod = "3+"'>3+ years</button>
                    </div>
                </div>
                
                <div class="info-card">
                    <div class="info-icon">üìä</div>
                    <div class="info-content">
                        <h4>Sales Data Coming Soon</h4>
                        <p>We're integrating QLD Government sales data. In the meantime, click any lot on the map to view property details.</p>
                    </div>
                </div>
            }
            
            @* Analysis Mode Toggle *@
            <div class="filter-section">
                <label>Analysis Mode</label>
                <div class="toggle-group">
                    <button class="toggle-btn @(_analysisMode == "owner" ? "active" : "")" @onclick='() => _analysisMode = "owner"'>
                        <span>üè°</span> Owner Occupier
                    </button>
                    <button class="toggle-btn @(_analysisMode == "investor" ? "active" : "")" @onclick='() => _analysisMode = "investor"'>
                        <span>üí∞</span> Investor
                    </button>
                </div>
            </div>
            
            @if (_analysisMode == "investor")
            {
                <div class="filter-section">
                    <label>Investment Strategy</label>
                    <div class="strategy-options">
                        <label class="radio-card @(_investStrategy == "hold" ? "selected" : "")">
                            <input type="radio" name="strategy" value="hold" @onchange='() => _investStrategy = "hold"' checked="@(_investStrategy == "hold")" />
                            <div class="radio-content">
                                <span class="icon">üèòÔ∏è</span>
                                <span class="label">Buy & Hold</span>
                                <span class="desc">Rent as-is</span>
                            </div>
                        </label>
                        <label class="radio-card @(_investStrategy == "reno" ? "selected" : "")">
                            <input type="radio" name="strategy" value="reno" @onchange='() => _investStrategy = "reno"' />
                            <div class="radio-content">
                                <span class="icon">üî®</span>
                                <span class="label">Renovate</span>
                                <span class="desc">Add value</span>
                            </div>
                        </label>
                        <label class="radio-card @(_investStrategy == "develop" ? "selected" : "")">
                            <input type="radio" name="strategy" value="develop" @onchange='() => _investStrategy = "develop"' />
                            <div class="radio-content">
                                <span class="icon">üèóÔ∏è</span>
                                <span class="label">Develop</span>
                                <span class="desc">Knockdown rebuild</span>
                            </div>
                        </label>
                    </div>
                </div>
            }
            
            @* Selected Property Info *@
            @if (_selectedLot != null)
            {
                <div class="selected-property glass-card">
                    <div class="property-header">
                        <h3>@_selectedLot.LotPlan</h3>
                        <button class="close-btn" @onclick="() => _selectedLot = null">√ó</button>
                    </div>
                    <div class="property-details">
                        <div class="detail-row">
                            <span class="label">Locality</span>
                            <span class="value">@(_selectedLot.Locality ?? "N/A")</span>
                        </div>
                        <div class="detail-row">
                            <span class="label">Area</span>
                            <span class="value">@(_selectedLot.Area ?? "N/A")</span>
                        </div>
                        <div class="detail-row">
                            <span class="label">LGA</span>
                            <span class="value">@(_selectedLot.LGA ?? "N/A")</span>
                        </div>
                    </div>
                    <div class="property-actions">
                        <button class="btn-primary" @onclick="RequestPropertyReport">
                            üìã Get Full Report
                        </button>
                        <button class="btn-secondary" @onclick="AnalyzeProperty">
                            ü§ñ AI Analysis
                        </button>
                    </div>
                </div>
            }
            else
            {
                <div class="empty-selection">
                    <div class="tap-icon">üëÜ</div>
                    <h4>Click any lot on the map</h4>
                    <p>Select a property to view details, request reports, or get an AI-powered valuation analysis.</p>
                </div>
            }
            
            @* Data Sources *@
            <div class="data-sources">
                <h4>Data Sources</h4>
                <div class="source-list">
                    <div class="source-item connected">
                        <span class="status">‚úì</span>
                        <span class="name">QLD Cadastre (DCDB)</span>
                    </div>
                    <div class="source-item connected">
                        <span class="status">‚úì</span>
                        <span class="name">QLD MapsOnline</span>
                    </div>
                    <div class="source-item pending">
                        <span class="status">‚è≥</span>
                        <span class="name">Domain API</span>
                    </div>
                    <div class="source-item pending">
                        <span class="status">‚è≥</span>
                        <span class="name">Sales History</span>
                    </div>
                </div>
            </div>
        </div>

        @* Map Panel - Leaflet with QLD Cadastre *@
        <div class="map-panel">
            <div id="leaflet-map" class="leaflet-map-container"></div>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromQuery]
    public string? Mode { get; set; } = "buy";

    [SupplyParameterFromQuery]
    public string? Location { get; set; } = "Brisbane";

    [SupplyParameterFromQuery]
    public string? Timeframe { get; set; } = "3mo";

    [SupplyParameterFromQuery]
    public string? Type { get; set; } = "residential";

    [CascadingParameter]
    private Task<AuthenticationState>? AuthState { get; set; }
    private System.Security.Claims.ClaimsPrincipal? User;

    // State
    private List<PropertyDto> _properties = new();
    private PropertyDto? _selectedProperty;
    private HashSet<string> _favorites = new();
    private bool _isLoading = true;
    private string? _error;
    private int _page = 1;
    private int _totalCount = 0;
    
    // New UI State
    private string _viewMode = "lots"; // "sold", "market", "lots"
    private string _soldPeriod = "0-6"; // "0-6", "6-12", "1-3", "3+"
    private string _analysisMode = "owner"; // "owner", "investor"
    private string _investStrategy = "hold"; // "hold", "reno", "develop"
    private SelectedLotInfo? _selectedLot;
    
    // Filters
    private bool _showFilters = false;
    private string _searchQuery = "";
    private string _filterType = "";
    private int? _filterBeds;
    private decimal? _filterMinPrice;
    private decimal? _filterMaxPrice;
    private bool _includeOffMarket = false;
    private string _sortBy = "newest";
    
    // Persona
    private SitePersona _persona = SitePersona.Buy;
    private string _personaClass => $"persona-{_persona.ToString().ToLower()}";
    private string _modeDisplay => _persona switch
    {
        SitePersona.Buy => "üè† BUY",
        SitePersona.Sell => "üìà SELL",
        SitePersona.Rent => "üîë RENT",
        _ => "üéØ AGENT"
    };

    protected override async Task OnInitializedAsync()
    {
        if (AuthState != null)
        {
            var auth = await AuthState;
            User = auth.User;
        }
        
        // Detect persona from mode or URL
        _persona = Mode?.ToLower() switch
        {
            "buy" => SitePersona.Buy,
            "sell" => SitePersona.Sell,
            "rent" => SitePersona.Rent,
            "agent" => SitePersona.Agent,
            _ => SitePersona.Buy
        };
        
        _searchQuery = Location ?? "Brisbane";
        await LoadProperties();
    }
    
    private bool _mapInitialized = false;
    
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender || (!_mapInitialized && _properties.Count > 0))
        {
            await InitializeMap();
        }
    }
    
    private DotNetObjectReference<Explore>? _dotNetRef;
    
    private async Task InitializeMap()
    {
        try
        {
            // Default center on Brisbane/Moorooka area
            double centerLat = -27.5241;
            double centerLng = 153.0180;
            
            // Create reference for JS callback
            _dotNetRef = DotNetObjectReference.Create(this);
            
            // Initialize Leaflet map with QLD Cadastre layer
            // Zoom 17 shows property boundaries clearly
            await JS.InvokeVoidAsync("leafletMap.init", "leaflet-map", centerLat, centerLng, 17, _dotNetRef);
            
            // Clear any existing markers
            await JS.InvokeVoidAsync("leafletMap.clearMarkers");
            
            // Note: Property boundaries come from QLD Government WMS layer (real data!)
            // No mock markers needed - the map shows actual lot boundaries
            
            _mapInitialized = true;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Map initialization error: {ex.Message}");
        }
    }
    
    [JSInvokable]
    public void OnMarkerClicked(string propertyId)
    {
        var property = _properties.FirstOrDefault(p => p.Id == propertyId);
        if (property != null)
        {
            _selectedProperty = property;
            StateHasChanged();
        }
    }
    
    public void Dispose()
    {
        _dotNetRef?.Dispose();
        try
        {
            JS.InvokeVoidAsync("leafletMap.dispose");
        }
        catch { }
    }
    
    // Class for selected lot information from cadastre
    public class SelectedLotInfo
    {
        public string LotPlan { get; set; } = "";
        public string? Locality { get; set; }
        public string? Area { get; set; }
        public string? LGA { get; set; }
        public double? Latitude { get; set; }
        public double? Longitude { get; set; }
    }
    
    [JSInvokable]
    public void OnLotSelected(string lotPlan, string? locality, string? area, string? lga, double lat, double lng)
    {
        _selectedLot = new SelectedLotInfo
        {
            LotPlan = lotPlan,
            Locality = locality,
            Area = area,
            LGA = lga,
            Latitude = lat,
            Longitude = lng
        };
        StateHasChanged();
    }
    
    private async Task RequestPropertyReport()
    {
        if (_selectedLot == null) return;
        
        var email = await JS.InvokeAsync<string>("prompt", "Enter your email address to receive the property report:");
        if (!string.IsNullOrEmpty(email) && email.Contains("@"))
        {
            try
            {
                var client = HttpClientFactory.CreateClient("api");
                var response = await client.PostAsJsonAsync("/api/maps/report/lot-plan", new
                {
                    lotPlan = _selectedLot.LotPlan,
                    emailAddress = email,
                    reportType = "ALLVEG"
                });
                
                if (response.IsSuccessStatusCode)
                {
                    await JS.InvokeVoidAsync("alert", $"‚úÖ Report requested! A comprehensive property report for {_selectedLot.LotPlan} will be emailed to {email} within a few minutes.");
                }
                else
                {
                    await JS.InvokeVoidAsync("alert", "‚ùå Error requesting report. Please try again.");
                }
            }
            catch
            {
                await JS.InvokeVoidAsync("alert", "Error requesting report. Please check your connection.");
            }
        }
    }
    
    private async Task AnalyzeProperty()
    {
        if (_selectedLot == null) return;
        
        // Navigate to chat with context about this property
        Nav.NavigateTo($"/chat?context=property&lot={_selectedLot.LotPlan}&mode={_analysisMode}&strategy={_investStrategy}");
    }


    private async Task LoadProperties()
    {
        _isLoading = true;
        _error = null;
        StateHasChanged();

        try
        {
            var client = HttpClientFactory.CreateClient("api");
            var queryParams = new List<string>
            {
                $"suburb={Uri.EscapeDataString(_searchQuery)}",
                $"page={_page}",
                $"includeOffMarket={_includeOffMarket}"
            };
            
            if (!string.IsNullOrEmpty(_filterType))
                queryParams.Add($"propertyType={_filterType}");
            if (_filterBeds.HasValue)
                queryParams.Add($"minBedrooms={_filterBeds}");
            if (_filterMinPrice.HasValue)
                queryParams.Add($"minPrice={_filterMinPrice}");
            if (_filterMaxPrice.HasValue)
                queryParams.Add($"maxPrice={_filterMaxPrice}");
                
            var url = $"/api/properties/search?{string.Join("&", queryParams)}";
            var response = await client.GetFromJsonAsync<SearchResultsDto>(url);
            
            if (response != null)
            {
                if (_page == 1)
                    _properties = response.Items;
                else
                    _properties.AddRange(response.Items);
                    
                _totalCount = response.TotalCount;
            }
        }
        catch (Exception ex)
        {
            _error = $"Unable to load properties. {ex.Message}";
            // Fallback to mock data for now
            await LoadMockProperties();
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }

    private Task LoadMockProperties()
    {
        var r = new Random();
        var mockProperties = new List<PropertyDto>();
        
        for (int i = 0; i < 12; i++)
        {
            var price = r.Next(500, 2500) * 1000m;
            mockProperties.Add(new PropertyDto
            {
                Id = Guid.NewGuid().ToString(),
                Address = $"{r.Next(1, 99)} {GetStreetName(r)}, {_searchQuery}",
                Suburb = _searchQuery,
                Bedrooms = r.Next(2, 6),
                Bathrooms = r.Next(1, 4),
                CarSpaces = r.Next(1, 3),
                LandAreaSqm = r.Next(300, 900),
                PriceLow = price,
                PriceHigh = price + r.Next(20, 100) * 1000m,
                EstimatedValue = price * (0.9m + (decimal)r.NextDouble() * 0.2m),
                Status = (ListingStatus)r.Next(0, 4),
                Headline = GetInsight(r),
                Latitude = r.NextDouble() * 60 + 20,
                Longitude = r.NextDouble() * 60 + 20
            });
        }
        
        _properties = mockProperties;
        _totalCount = mockProperties.Count;
        return Task.CompletedTask;
    }
    
    private string GetStreetName(Random r) => new[] { "Park Ave", "River Rd", "Smith St", "High St", "Garden St", "View Tce" }[r.Next(0, 6)];
    private string GetInsight(Random r) => new[] { 
        "Rare opportunity - first time on market in 20 years",
        "Prices in this street up 12% YoY", 
        "Great entry level opportunity",
        "Walking distance to top schools",
        "Recently renovated throughout",
        "Priced below comparable sales"
    }[r.Next(0, 6)];

    private async Task LoadMore()
    {
        _page++;
        await LoadProperties();
    }

    private void SelectProperty(PropertyDto property)
    {
        _selectedProperty = property;
    }

    private void ToggleFavorite(PropertyDto property)
    {
        if (_favorites.Contains(property.Id))
            _favorites.Remove(property.Id);
        else
            _favorites.Add(property.Id);
    }

    private void ToggleFilters() => _showFilters = !_showFilters;
    
    private async Task ApplyFilters()
    {
        _page = 1;
        _showFilters = false;
        await LoadProperties();
    }
    
    private async Task ClearFilters()
    {
        _filterType = "";
        _filterBeds = null;
        _filterMinPrice = null;
        _filterMaxPrice = null;
        _includeOffMarket = false;
        _page = 1;
        await LoadProperties();
    }
    
    private async Task HandleSearchKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
            await ExecuteSearch();
    }
    
    private async Task ExecuteSearch()
    {
        _page = 1;
        await LoadProperties();
    }

    private void StartChat()
    {
        Nav.NavigateTo($"/chat?mode={Mode}&address={Uri.EscapeDataString(_selectedProperty?.Address ?? Location ?? "")}");
    }
    
    private void ChatAboutProperty()
    {
        if (_selectedProperty != null)
            Nav.NavigateTo($"/chat?mode={Mode}&address={Uri.EscapeDataString(_selectedProperty.Address)}");
    }

    // Formatting helpers
    private string FormatPrice(decimal? low, decimal? high)
    {
        if (!low.HasValue) return "Contact Agent";
        if (!high.HasValue || low == high) return FormatCurrency(low.Value);
        return $"{FormatCurrency(low.Value)} - {FormatCurrency(high.Value)}";
    }
    
    private string FormatCurrency(decimal value)
    {
        if (value >= 1_000_000)
            return $"${value / 1_000_000:F2}M";
        return $"${value:N0}";
    }
    
    private string FormatPriceShort(decimal? price)
    {
        if (!price.HasValue) return "POA";
        if (price >= 1_000_000)
            return $"${price.Value / 1_000_000:F1}m";
        return $"${price.Value / 1000:F0}k";
    }
    
    private string TruncateText(string text, int maxLength)
    {
        if (string.IsNullOrEmpty(text) || text.Length <= maxLength)
            return text;
        return text.Substring(0, maxLength) + "...";
    }
    
    private string GetStatusClass(ListingStatus status) => status switch
    {
        ListingStatus.ForSale => "for-sale",
        ListingStatus.UnderOffer => "under-offer",
        ListingStatus.Sold => "sold",
        ListingStatus.ForRent => "for-rent",
        _ => ""
    };
    
    private string GetStatusDisplay(ListingStatus status) => status switch
    {
        ListingStatus.ForSale => "For Sale",
        ListingStatus.UnderOffer => "Under Offer",
        ListingStatus.Sold => "Sold",
        ListingStatus.ForRent => "For Rent",
        ListingStatus.Leased => "Leased",
        _ => "Off Market"
    };

    // DTOs matching API response
    private class SearchResultsDto
    {
        public List<PropertyDto> Items { get; set; } = new();
        public int TotalCount { get; set; }
        public int Page { get; set; }
        public int PageSize { get; set; }
    }
    
    private class PropertyDto
    {
        public string Id { get; set; } = "";
        public string Address { get; set; } = "";
        public string? Suburb { get; set; }
        public int Bedrooms { get; set; }
        public int Bathrooms { get; set; }
        public int CarSpaces { get; set; }
        public double? LandAreaSqm { get; set; }
        public string? PriceDisplay { get; set; }
        public decimal? PriceLow { get; set; }
        public decimal? PriceHigh { get; set; }
        public decimal? EstimatedValue { get; set; }
        public ListingStatus Status { get; set; }
        public string? Headline { get; set; }
        public string? MainImageUrl { get; set; }
        public double? Latitude { get; set; }
        public double? Longitude { get; set; }
    }
    
    private enum ListingStatus
    {
        OffMarket,
        ForSale,
        UnderOffer,
        Sold,
        ForRent,
        Leased,
        Withdrawn
    }
}


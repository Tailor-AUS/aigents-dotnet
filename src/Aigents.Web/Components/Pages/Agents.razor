    justify-content: center;
}

.listing-address {
    font-weight: 600;
    font-size: 14px;
    color: #1a1a2e;
    margin-bottom: 4px;
}

.listing-meta {
    font-size: 12px;
    color: #9ca3af;
    margin-bottom: 6px;
}

.listing-status {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 12px;
    color: #6b7280;
}

.status-dot {
    width: 6px;
    height: 6px;
    background: #6b7280;
    border-radius: 50%;

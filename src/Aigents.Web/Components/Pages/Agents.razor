.listing-status.hot .status-dot {
    background: #f97316;
    animation: pulse 1s infinite;
}

.listing-status.new .status-dot {
    background: #10b981;
}

@@keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }

@page "/agents/register"
@rendermode @(new InteractiveServerRenderMode(prerender: true))
@using Microsoft.AspNetCore.Components.Web
@inject NavigationManager Navigation

<PageTitle>Register as Agent | aigents</PageTitle>

@{
    var agentType = GetAgentType();
    var isInternational = agentType == "international";
}

<div class="register-wrapper">
    <div class="register-bg"></div>
    
    @* Navigation *@
    <nav class="register-nav">
        <div class="nav-container">
            <a href="/agents" class="logo">
                <span class="logo-mark">‚óÜ</span>
                <span class="logo-text">aigents</span>
            </a>
        </div>
    </nav>
    
    @* Registration Form *@
    <section class="register-section">
        <div class="register-container">
            <div class="register-card">
                @* Header *@
                <div class="card-header">
                    <a href="/agents" class="back-link">‚Üê Back to overview</a>
                    <div class="type-badge @(isInternational ? "intl" : "au")">
                        @(isInternational ? "üåè International Partner" : "üá¶üá∫ AU Licensed Agent")
                    </div>
                    <h1>Create your agent account</h1>
                    <p>
                        @if (isInternational)
                        {
                            <span>Access Australian open listings. We handle the licensing.</span>
                        }
                        else
                        {
                            <span>Access open listings and submit offers for your buyers.</span>
                        }
                    </p>
                </div>
                
                @* Form *@
                <div class="register-form">
                    @* Personal Info *@
                    <div class="form-section">
                        <h3>Personal Information</h3>
                        <div class="form-row">
                            <div class="form-group">
                                <label>First Name</label>
                                <input type="text" placeholder="John" @bind="_firstName" />
                            </div>
                            <div class="form-group">
                                <label>Last Name</label>
                                <input type="text" placeholder="Smith" @bind="_lastName" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Email Address</label>
                            <input type="email" placeholder="john@agency.com" @bind="_email" />
                        </div>
                        <div class="form-group">
                            <label>Phone Number</label>
                            <input type="tel" placeholder="+61 4XX XXX XXX" @bind="_phone" />
                        </div>
                    </div>
                    
                    @* Agency Info *@
                    <div class="form-section">
                        <h3>Agency Details</h3>
                        <div class="form-group">
                            <label>Agency / Company Name</label>
                            <input type="text" placeholder="Ray White Brisbane" @bind="_agencyName" />
                        </div>
                        
                        @if (!isInternational)
                        {
                            @* AU License Info *@
                            <div class="form-row">
                                <div class="form-group">
                                    <label>License Number</label>
                                    <input type="text" placeholder="1234567" @bind="_licenseNumber" />
                                </div>
                                <div class="form-group">
                                    <label>License State</label>
                                    <select @bind="_licenseState">
                                        <option value="">Select state</option>
                                        <option value="QLD">Queensland</option>
                                        <option value="NSW">New South Wales</option>
                                        <option value="VIC">Victoria</option>
                                        <option value="WA">Western Australia</option>
                                        <option value="SA">South Australia</option>
                                        <option value="TAS">Tasmania</option>
                                        <option value="NT">Northern Territory</option>
                                        <option value="ACT">ACT</option>
                                    </select>
                                </div>
                            </div>
                        }
                        else
                        {
                            @* International Info *@
                            <div class="form-group">
                                <label>Country of Operation</label>
                                <select @bind="_country">
                                    <option value="">Select country</option>
                                    <option value="CN">China</option>
                                    <option value="SG">Singapore</option>
                                    <option value="HK">Hong Kong</option>
                                    <option value="UK">United Kingdom</option>
                                    <option value="US">United States</option>
                                    <option value="NZ">New Zealand</option>
                                    <option value="MY">Malaysia</option>
                                    <option value="ID">Indonesia</option>
                                    <option value="other">Other</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Buyer Types (select all that apply)</label>
                                <div class="checkbox-group">
                                    <label class="checkbox-item">
                                        <input type="checkbox" @bind="_buyerInvestors" />
                                        <span>Investors</span>
                                    </label>
                                    <label class="checkbox-item">
                                        <input type="checkbox" @bind="_buyerExpats" />
                                        <span>Expats returning to AU</span>
                                    </label>
                                    <label class="checkbox-item">
                                        <input type="checkbox" @bind="_buyerMigrants" />
                                        <span>Migrants to AU</span>
                                    </label>
                                    <label class="checkbox-item">
                                        <input type="checkbox" @bind="_buyerStudents" />
                                        <span>Student housing</span>
                                    </label>
                                </div>
                            </div>
                        }
                    </div>
                    
                    @* Password *@
                    <div class="form-section">
                        <h3>Create Password</h3>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" placeholder="Min 8 characters" @bind="_password" />
                        </div>
                        <div class="form-group">
                            <label>Confirm Password</label>
                            <input type="password" placeholder="Confirm password" @bind="_confirmPassword" />
                        </div>
                    </div>
                    
                    @* Terms *@
                    <div class="form-section">
                        <label class="checkbox-item terms">
                            <input type="checkbox" @bind="_agreeTerms" />
                            <span>I agree to the <a href="/terms">Terms of Service</a> and <a href="/privacy">Privacy Policy</a></span>
                        </label>
                    </div>
                    
                    @* Subscription Selection *@
                    @if (!isInternational)
                    {
                        <div class="form-section">
                            <h3>Select Your Plan</h3>
                            <div class="plan-options">
                                <div class="plan-option @(_selectedPlan == "free" ? "selected" : "")" @onclick="SelectFreePlan">
                                    <div class="plan-radio"></div>
                                    <div class="plan-info">
                                        <strong>Free</strong>
                                        <span>Browse listings (limited)</span>
                                    </div>
                                    <div class="plan-price">$0/mo</div>
                                </div>
                                <div class="plan-option @(_selectedPlan == "pro" ? "selected" : "")" @onclick="SelectProPlan">
                                    <div class="plan-radio"></div>
                                    <div class="plan-info">
                                        <strong>Pro</strong>
                                        <span>Full access, unlimited offers</span>
                                    </div>
                                    <div class="plan-price">$99/mo</div>
                                </div>
                            </div>
                        </div>
                    }
                    
                    @* Submit *@
                    <button class="submit-btn @(isInternational ? "intl" : "")" @onclick="HandleSubmit">
                        @if (isInternational)
                        {
                            <span>Apply as International Partner</span>
                        }
                        else
                        {
                            <span>Create Account & Verify License</span>
                        }
                        <span class="btn-arrow">‚Üí</span>
                    </button>
                    
                    @* Or divider *@
                    <div class="or-divider">
                        <span>or continue with</span>
                    </div>
                    
                    @* Social Sign In *@
                    <div class="social-buttons">
                        <button class="social-btn google">
                            <svg width="18" height="18" viewBox="0 0 24 24"><path fill="currentColor" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/><path fill="currentColor" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/><path fill="currentColor" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/><path fill="currentColor" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/></svg>
                            Google
                        </button>
                        <button class="social-btn apple">
                            <svg width="18" height="18" viewBox="0 0 24 24"><path fill="currentColor" d="M17.05 20.28c-.98.95-2.05.88-3.08.4-1.09-.5-2.08-.48-3.24 0-1.44.62-2.2.44-3.06-.4C2.79 15.25 3.51 7.59 9.05 7.31c1.35.07 2.29.74 3.08.8 1.18-.24 2.31-.93 3.57-.84 1.51.12 2.65.72 3.4 1.8-3.12 1.87-2.38 5.98.48 7.13-.57 1.5-1.31 2.99-2.54 4.09l.01-.01zM12.03 7.25c-.15-2.23 1.66-4.07 3.74-4.25.29 2.58-2.34 4.5-3.74 4.25z"/></svg>
                            Apple
                        </button>
                    </div>
                </div>
            </div>
            
            @* Side Info *@
            <div class="register-info">
                <h3>What happens next?</h3>
                <div class="info-steps">
                    <div class="info-step">
                        <div class="step-icon">1</div>
                        <div class="step-content">
                            <strong>Create account</strong>
                            <span>Fill out your details and choose a plan</span>
                        </div>
                    </div>
                    @if (!isInternational)
                    {
                        <div class="info-step">
                            <div class="step-icon">2</div>
                            <div class="step-content">
                                <strong>License verification</strong>
                                <span>We verify your REIQ/OFT license (24-48hrs)</span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="info-step">
                            <div class="step-icon">2</div>
                            <div class="step-content">
                                <strong>Application review</strong>
                                <span>Our team reviews your application (2-3 days)</span>
                            </div>
                        </div>
                    }
                    <div class="info-step">
                        <div class="step-icon">3</div>
                        <div class="step-content">
                            <strong>Access granted</strong>
                            <span>Browse listings and start submitting offers</span>
                        </div>
                    </div>
                </div>
                
                <div class="info-note">
                    <strong>üîí Secure & Verified</strong>
                    <p>All agents are verified before accessing seller information. This protects both buyers and sellers.</p>
                </div>
            </div>
        </div>
    </section>
</div>

<style>
@@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap');

.register-wrapper {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    background: #fafafa;
    min-height: 100vh;
    -webkit-font-smoothing: antialiased;
}

.register-bg {
    position: fixed;
    inset: 0;
    background: 
        radial-gradient(ellipse 80% 50% at 50% -20%, rgba(139, 92, 246, 0.08), transparent),
        radial-gradient(ellipse 60% 50% at 80% 50%, rgba(99, 102, 241, 0.05), transparent);
    pointer-events: none;
}

.register-nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background: rgba(250, 250, 250, 0.8);
    backdrop-filter: saturate(180%) blur(20px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.06);
}

.nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 16px 24px;
}

.logo {
    display: flex;
    align-items: center;
    gap: 8px;
    text-decoration: none;
}

.logo-mark {
    font-size: 20px;
    color: #8b5cf6;
}

.logo-text {
    font-size: 22px;
    font-weight: 700;
    color: #1a1a2e;
}

.register-section {
    padding: 100px 24px 60px;
}

.register-container {
    max-width: 1000px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 320px;
    gap: 48px;
    align-items: start;
}

.register-card {
    background: white;
    border-radius: 20px;
    padding: 40px;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.06);
    border: 1px solid rgba(0, 0, 0, 0.06);
}

.back-link {
    display: inline-block;
    font-size: 14px;
    color: #6b7280;
    text-decoration: none;
    margin-bottom: 24px;
    transition: color 0.2s;
}

.back-link:hover {
    color: #8b5cf6;
}

.type-badge {
    display: inline-block;
    padding: 6px 14px;
    font-size: 13px;
    font-weight: 600;
    border-radius: 20px;
    margin-bottom: 16px;
}

.type-badge.au {
    background: rgba(16, 185, 129, 0.1);
    color: #059669;
}

.type-badge.intl {
    background: rgba(139, 92, 246, 0.1);
    color: #8b5cf6;
}

.card-header h1 {
    font-size: 28px;
    font-weight: 800;
    color: #1a1a2e;
    margin-bottom: 8px;
}

.card-header p {
    font-size: 16px;
    color: #6b7280;
    margin-bottom: 32px;
}

.form-section {
    margin-bottom: 32px;
    padding-bottom: 32px;
    border-bottom: 1px solid rgba(0, 0, 0, 0.06);
}

.form-section:last-of-type {
    border-bottom: none;
    margin-bottom: 24px;
}

.form-section h3 {
    font-size: 16px;
    font-weight: 700;
    color: #1a1a2e;
    margin-bottom: 20px;
}

.form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 16px;
}

.form-group {
    margin-bottom: 16px;
}

.form-group label {
    display: block;
    font-size: 13px;
    font-weight: 600;
    color: #4b5563;
    margin-bottom: 8px;
}

.form-group input,
.form-group select {
    width: 100%;
    padding: 12px 16px;
    border: 2px solid rgba(0, 0, 0, 0.08);
    border-radius: 10px;
    font-size: 15px;
    font-family: inherit;
    transition: all 0.2s;
    background: white;
}

.form-group input:focus,
.form-group select:focus {
    outline: none;
    border-color: #8b5cf6;
    box-shadow: 0 0 0 4px rgba(139, 92, 246, 0.1);
}

.checkbox-group {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 12px;
}

.checkbox-item {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 14px;
    color: #4b5563;
    cursor: pointer;
}

.checkbox-item input {
    width: 18px;
    height: 18px;
    accent-color: #8b5cf6;
}

.checkbox-item.terms {
    font-size: 13px;
}

.checkbox-item.terms a {
    color: #8b5cf6;
    text-decoration: none;
}

.checkbox-item.terms a:hover {
    text-decoration: underline;
}

.plan-options {
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.plan-option {
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 16px 20px;
    border: 2px solid rgba(0, 0, 0, 0.08);
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.2s;
}

.plan-option:hover {
    border-color: rgba(139, 92, 246, 0.3);
}

.plan-option.selected {
    border-color: #8b5cf6;
    background: rgba(139, 92, 246, 0.04);
}

.plan-radio {
    width: 20px;
    height: 20px;
    border: 2px solid #d1d5db;
    border-radius: 50%;
    transition: all 0.2s;
}

.plan-option.selected .plan-radio {
    border-color: #8b5cf6;
    background: #8b5cf6;
    box-shadow: inset 0 0 0 4px white;
}

.plan-info {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.plan-info strong {
    font-size: 15px;
    font-weight: 700;
    color: #1a1a2e;
}

.plan-info span {
    font-size: 13px;
    color: #9ca3af;
}

.plan-price {
    font-size: 18px;
    font-weight: 700;
    color: #1a1a2e;
}

.submit-btn {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    padding: 16px 24px;
    background: linear-gradient(135deg, #10b981, #059669);
    color: white;
    border: none;
    border-radius: 12px;
    font-size: 16px;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s;
    font-family: inherit;
}

.submit-btn.intl {
    background: linear-gradient(135deg, #8b5cf6, #6366f1);
}

.submit-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(16, 185, 129, 0.35);
}

.submit-btn.intl:hover {
    box-shadow: 0 8px 24px rgba(139, 92, 246, 0.35);
}

.btn-arrow {
    font-size: 18px;
    transition: transform 0.2s;
}

.submit-btn:hover .btn-arrow {
    transform: translateX(4px);
}

.or-divider {
    display: flex;
    align-items: center;
    gap: 16px;
    margin: 24px 0;
}

.or-divider::before,
.or-divider::after {
    content: '';
    flex: 1;
    height: 1px;
    background: rgba(0, 0, 0, 0.08);
}

.or-divider span {
    font-size: 13px;
    color: #9ca3af;
}

.social-buttons {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 12px;
}

.social-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    padding: 14px 20px;
    border: 2px solid rgba(0, 0, 0, 0.08);
    border-radius: 10px;
    background: white;
    font-size: 14px;
    font-weight: 600;
    color: #1a1a2e;
    cursor: pointer;
    transition: all 0.2s;
    font-family: inherit;
}

.social-btn:hover {
    border-color: #1a1a2e;
    background: #f8fafc;
}

/* Side Info */
.register-info {
    position: sticky;
    top: 100px;
}

.register-info h3 {
    font-size: 18px;
    font-weight: 700;
    color: #1a1a2e;
    margin-bottom: 24px;
}

.info-steps {
    display: flex;
    flex-direction: column;
    gap: 20px;
    margin-bottom: 32px;
}

.info-step {
    display: flex;
    gap: 14px;
}

.step-icon {
    width: 32px;
    height: 32px;
    background: rgba(139, 92, 246, 0.1);
    color: #8b5cf6;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
    font-weight: 700;
    flex-shrink: 0;
}

.step-content {
    display: flex;
    flex-direction: column;
}

.step-content strong {
    font-size: 14px;
    font-weight: 700;
    color: #1a1a2e;
}

.step-content span {
    font-size: 13px;
    color: #6b7280;
}

.info-note {
    padding: 20px;
    background: #f8fafc;
    border-radius: 12px;
    border: 1px solid rgba(0, 0, 0, 0.04);
}

.info-note strong {
    display: block;
    font-size: 14px;
    font-weight: 700;
    color: #1a1a2e;
    margin-bottom: 8px;
}

.info-note p {
    font-size: 13px;
    color: #6b7280;
    line-height: 1.5;
    margin: 0;
}

/* Responsive */
@@media (max-width: 900px) {
    .register-container {
        grid-template-columns: 1fr;
    }
    
    .register-info {
        position: static;
        order: -1;
        padding: 24px;
        background: white;
        border-radius: 16px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.04);
    }
}

@@media (max-width: 600px) {
    .register-card {
        padding: 24px;
    }
    
    .form-row {
        grid-template-columns: 1fr;
    }
    
    .checkbox-group {
        grid-template-columns: 1fr;
    }
    
    .social-buttons {
        grid-template-columns: 1fr;
    }
}
</style>

@code {
    private string _firstName = "";
    private string _lastName = "";
    private string _email = "";
    private string _phone = "";
    private string _agencyName = "";
    private string _licenseNumber = "";
    private string _licenseState = "";
    private string _country = "";
    private string _password = "";
    private string _confirmPassword = "";
    private bool _agreeTerms = false;
    private string _selectedPlan = "pro";
    
    // Buyer types for international
    private bool _buyerInvestors = false;
    private bool _buyerExpats = false;
    private bool _buyerMigrants = false;
    private bool _buyerStudents = false;
    
    private string GetAgentType()
    {
        var uri = new Uri(Navigation.Uri);
        var query = System.Web.HttpUtility.ParseQueryString(uri.Query);
        return query["type"] ?? "au";
    }
    
    private void HandleSubmit()
    {
        // TODO: Implement registration logic
        var agentType = GetAgentType();
        if (agentType == "international")
        {
            Navigation.NavigateTo("/agents/pending?type=international");
        }
        else
        {
            Navigation.NavigateTo("/agents/pending?type=au");
        }
    }
    
    private void SelectFreePlan()
    {
        _selectedPlan = "free";
    }
    
    private void SelectProPlan()
    {
        _selectedPlan = "pro";
    }
}

                       @onkeypress="HandleKeyPress"
                       placeholder="Message your AI agent..." 
                       class="chat-input" />
                <button class="send-btn @(_mode) @(string.IsNullOrWhiteSpace(_input) ? "disabled" : "")" 
                        @onclick="() => SendMessage()"
                        disabled="@(string.IsNullOrWhiteSpace(_input) || _isLoading)">

@code {
    [Parameter]
    public System.Security.Claims.ClaimsPrincipal? User { get; set; }

    [Parameter]
    [SupplyParameterFromQuery]
    public string? Mode { get; set; }
    
    [Parameter]
    [SupplyParameterFromQuery]
    public string? Address { get; set; }

    private string _mode = "buy";
    private string _input = "";
    private bool _isLoading;
    private bool _showHandoff;
    private List<ChatMessage> _messages = new();
    private Guid? _conversationId;
    
    // Property Report Data
    private PropertyReport.PropertyReportData? _reportData;

    private record ChatMessage(string Role, string Content);
    private record Suggestion(string Icon, string Label);
    
    protected override async Task OnInitializedAsync()
    {
        if (!string.IsNullOrEmpty(Mode))
        {
            _mode = Mode.ToLower() == "sell" ? "sell" : "buy";
        }
        
        // Auto-generate report if address is present
        if (_mode == "sell" && !string.IsNullOrEmpty(Address))
        {
            await GenerateReport(Address);
        }
    }
    
    private async Task GenerateReport(string address)
    {
        _isLoading = true;
        try
        {
            var client = HttpClientFactory.CreateClient("api");
            // Simulate AI thinking time if API is too fast
            var report = await client.GetFromJsonAsync<PropertyReport.PropertyReportData>($"/api/listings/report?address={Uri.EscapeDataString(address)}");
            _reportData = report;
        }
        catch (Exception ex)
        {
            _messages.Add(new ChatMessage("assistant", $"I couldn't generate a report for that address. Error: {ex.Message}"));
        }
        finally
        {
            _isLoading = false;
        }
    }

    private List<Suggestion> GetSuggestions() => _mode == "buy" 
        ? new List<Suggestion>
        {
            new("ğŸ”", "Off-market in Paddington"),
            new("ğŸ ", "Under $1.7M in Bulimba"),
            new("ğŸ“", "Best Gold Coast suburbs"),
            new("ğŸ“ˆ", "High-growth areas")
        }
        : new List<Suggestion>
        {
            new("ğŸ’°", "How much is my home worth?"),
            new("ğŸ“Š", "Suburbs report"),
            new("ğŸ˜ï¸", "Comparable sales"),
            new("âœ¨", "Create listing description")
        };

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !string.IsNullOrWhiteSpace(_input))
        {
            await SendMessage();
        }
    }

    private async Task SendMessage(string? content = null)
    {
        var text = content ?? _input.Trim();
        if (string.IsNullOrWhiteSpace(text) || _isLoading) return;

        _input = "";
        _messages.Add(new ChatMessage("user", text));
        _isLoading = true;
        
        // If report is showing, we might want to hide it or keep it above?
        // For now, let's switch back to chat view if they type, implying they want to discuss
        if (_reportData != null)
        {
             // Optional: Clear report to show chat history? 
             // Or maybe we treat the report as the "context" and just show chat below?
             // For this design, let's hide report and show it in history or just switch views.
             // But simpler: just null it to go back to chat flow
             _reportData = null;
        }
        
        StateHasChanged();

        try
        {
            var client = HttpClientFactory.CreateClient("api");
            var response = await client.PostAsJsonAsync("/api/chat", new
            {
                ConversationId = _conversationId,
                UserId = Guid.Parse(User?.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value ?? Guid.Empty.ToString()),
                Messages = _messages.Select(m => new { m.Role, m.Content }),
                Mode = _mode
            });

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<ChatResponse>();
                if (result is not null)
                {
                    _conversationId = result.ConversationId;
                    _messages.Add(new ChatMessage("assistant", result.Content));
                    
                    if (_messages.Count >= 6 && !_showHandoff)
                    {
                        _showHandoff = true;
                    }
                }
            }
            else
            {
                _messages.Add(new ChatMessage("assistant", "Sorry, I'm having trouble connecting. Please try again."));
            }
        }
        catch
        {
            _messages.Add(new ChatMessage("assistant", "Sorry, I'm having trouble connecting. Please try again."));
        }

        _isLoading = false;
        StateHasChanged();
    }

    private void HandleBack()
    {
        if (_reportData != null)
        {
            // If viewing report, go back to home
            Navigation.NavigateTo("/");
        }
        else
        {
            Navigation.NavigateTo("/");
        }
    }
    
    private void HandleUnlock()
    {
        // Placeholder for future auth flow
        _reportData = null; // Hide report
        _messages.Add(new ChatMessage("assistant", "Great! I've saved this property to your profile. Let's get it ready for sale. What's your target timeframe?"));
    }
    
    private void HandleChatAboutReport()
    {
        _reportData = null; // Hide report
        _messages.Add(new ChatMessage("assistant", "What would you like to know about the report? I can explain the valuation or the comparable sales."));
    }

    private async Task HandleHandoff()
    {
        // TODO: Call handoff API
        await Task.CompletedTask;
    }

    private void SetModeBuy() => _mode = "buy";
    private void SetModeSell() => _mode = "sell";

    private string BuyToggleClass => _mode == "buy" ? "mini-toggle-btn active buy" : "mini-toggle-btn";
    private string SellToggleClass => _mode == "sell" ? "mini-toggle-btn active sell" : "mini-toggle-btn";

    private record ChatResponse(Guid ConversationId, string Content, int TokensUsed);
}
